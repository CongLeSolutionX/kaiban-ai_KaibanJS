{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "checkJs": false,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    // "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}
